@model List<Category>
@{
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a asp-action="Create" asp-controller="Category" class="btn btn-outline-primary ml-auto">Create</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th colspan="3" scope="col">Action</th>
                </tr>

            </thead>
            @{
                int counter = 1;
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@counter</td>
                        <td>@item.Name</td>


                        <td>
                            <a class="btn btn btn-success" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                        </td>




                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>